<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:id="@+id/linearLayout" android:orientation="vertical">


    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="129dp">

        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:layout_alignParentStart="true" android:layout_marginStart="102dp"
                android:layout_alignParentBottom="true" android:layout_marginBottom="61dp"
                android:id="@+id/editTextTextPersonName2"/>
        <TextView
                android:text="Unesi svoje ime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_alignParentStart="true"
                android:layout_marginStart="103dp" android:layout_alignParentTop="true" android:layout_marginTop="1dp"
                android:id="@+id/textView6"/>
        <Button
                android:text="Spremi"
                android:layout_width="68dp"
                android:layout_height="28dp" android:layout_alignParentStart="true"
                android:layout_marginStart="178dp" android:layout_alignParentTop="true" android:layout_marginTop="70dp"
                android:id="@+id/button" android:textSize="7sp"/>
        <Button
                android:text="Odustani"
                android:layout_width="68dp"
                android:layout_height="28dp" android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true" android:layout_marginEnd="93dp" android:layout_marginTop="71dp"
                android:id="@+id/button2" android:textSize="7sp"/>
    </RelativeLayout>
</LinearLayout>