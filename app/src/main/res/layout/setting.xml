<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <View
            android:id="@+id/splitLine_hor"
            android:layout_width="380dp"
            android:layout_height="2dp"
            android:background="#000000"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="195dp" android:layout_marginStart="16dp"/>
    <View
            android:id="@+id/SplitLine_hor1"
            android:layout_width="380dp"
            android:layout_height="2dp"
            android:background="#000000"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="274dp" android:layout_marginStart="16dp"/>
    <View
            android:id="@+id/SplitLine_hor2"
            android:layout_width="380dp"
            android:layout_height="2dp"
            android:background="#000000"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="115dp" android:layout_marginStart="16dp"/>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/onClickLogOut" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="280dp"
            app:layout_constraintHorizontal_bias="0.0">

        <TextView
                android:text="Odjava"
                android:textColor="#F63535"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_alignParentTop="true" android:layout_marginTop="24dp"
                android:layout_alignParentStart="true" android:layout_marginStart="25dp" android:textSize="30dp"/>
        <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp" app:srcCompat="@android:drawable/ic_menu_set_as"
                android:layout_alignParentTop="true" android:layout_marginTop="12dp"
                app:layout_constraintEnd_toEndOf="parent" android:id="@+id/imageView7"
                android:layout_alignParentEnd="true" android:layout_marginEnd="35dp"/>
    </RelativeLayout>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="200dp">

        <TextView
                android:text="Promjena lozinke"
                android:clickable="true"
                android:textColor="@drawable/text_selector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView12"
                android:gravity="center"
                android:layout_alignParentTop="true"
                android:layout_marginTop="24dp" android:layout_alignParentStart="true"
                android:layout_marginStart="25dp" android:textSize="30dp"/>
        <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp" app:srcCompat="@android:drawable/ic_lock_lock"
                android:id="@+id/imageView9"
                android:layout_alignParentEnd="true" android:layout_alignParentTop="true"
                android:layout_marginTop="12dp" android:layout_marginEnd="35dp"/>
    </RelativeLayout>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="120dp">

        <TextView
                android:text="Upravljanje računom"
                android:clickable="true"
                android:textColor="@drawable/text_selector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView15"
                android:gravity="center|center_horizontal"
                android:layout_alignParentTop="true"
                android:layout_marginTop="24dp" android:layout_alignParentStart="true"
                android:layout_marginStart="25dp" android:textSize="30dp"/>
        <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp" app:srcCompat="@android:drawable/ic_menu_info_details"
                android:id="@+id/imageView4"
                android:layout_alignParentEnd="true" android:layout_alignParentTop="true"
                android:layout_marginTop="12dp" android:layout_marginEnd="35dp"/>
    </RelativeLayout>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="40dp">

        <TextView
                android:text="Obavijesti"
                android:clickable="true"
                android:textColor="@drawable/text_selector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txoba"
                android:gravity="center"
                android:layout_alignParentStart="true" android:layout_alignParentTop="true"
                android:layout_marginTop="24dp" android:layout_marginStart="25dp" android:textSize="30dp"/>
        <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp" app:srcCompat="@android:drawable/ic_popup_reminder"
                android:id="@+id/imageView3"
                android:layout_alignParentEnd="true" android:layout_alignParentTop="true"
                android:layout_marginTop="12dp" android:layout_marginEnd="35dp"/>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>