<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:layout_editor_absoluteY="25dp">
    <ScrollView
            android:layout_width="415dp"
            android:layout_height="662dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical">
            <LinearLayout android:layout_width="395dp" android:layout_height="match_parent"
                          android:layout_alignParentBottom="true"
                          android:orientation="vertical" android:gravity="center">
                <RelativeLayout
                        android:layout_width="175dp"
                        android:layout_height="148dp"
                        android:layout_marginStart="3dp"
                        android:layout_marginTop="35dp"
                >
                    <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="145dp" app:srcCompat="@mipmap/add_image_foreground"
                            android:layout_alignParentStart="true" android:layout_marginStart="0dp"
                            android:layout_alignParentTop="true" android:layout_marginTop="3dp"
                            android:id="@+id/imgBtnOpenDialog"/>
                </RelativeLayout>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="25sp"
                        android:text="OSOBNI PODACI"
                        android:textColor="@color/black"
                        android:id="@+id/osobniPodaci"
                        android:layout_centerHorizontal="true"
                        android:paddingTop="10dp"/>
                <RelativeLayout
                        android:background="@drawable/shape"
                        android:layout_width="380dp"
                        android:layout_height="282dp"
                        android:id="@+id/relLayout116">


                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:id="@+id/openPopupIme"
                            android:layout_marginTop="15dp">

                        <EditText
                                android:textColor="@drawable/text_selector"
                                android:focusable="false"
                                android:layout_width="339dp"
                                android:layout_height="match_parent"
                                android:id="@+id/txIme"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="40dp"
                                android:background="@null"
                                android:inputType="textNoSuggestions"
                                android:hint="Walter" android:paddingTop="25dp"/>
                        <TextView
                                android:text="Ime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:id="@+id/textView16"
                                android:layout_marginStart="40dp"
                                android:layout_marginTop="1dp"/>
                        <ImageView
                                android:layout_width="60dp"
                                android:layout_height="40dp" app:srcCompat="@mipmap/editicon_foreground"
                                android:layout_alignParentEnd="true" android:layout_alignParentTop="true"
                                android:layout_marginEnd="4dp" android:layout_marginTop="5dp"
                                android:id="@+id/imageView15"/>

                    </RelativeLayout>

                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_below="@+id/onClickSpol"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="2dp" android:layout_alignParentBottom="true"
                            android:layout_marginBottom="17dp" android:layout_marginTop="15dp"
                            android:id="@+id/openPopupNadimak">

                        <TextView
                                android:text="Nadimak"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:layout_alignParentStart="true"
                                android:layout_marginStart="39dp" android:layout_alignParentBottom="true"
                                android:layout_marginBottom="34dp" android:id="@+id/textView20"/>
                        <EditText
                                android:focusable="false"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/editTxNadimak"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="40dp"
                                android:background="@null"
                                android:paddingTop="25dp"
                                android:inputType="date"
                                android:hint="Nadimak"/>

                        <ImageView
                                android:layout_width="60dp"
                                android:layout_height="40dp" app:srcCompat="@mipmap/editicon_foreground"
                                app:layout_constraintTop_toTopOf="parent"
                                android:id="@+id/imageView18" android:layout_alignParentEnd="true"
                                android:layout_alignParentTop="true" android:layout_marginEnd="4dp"
                                android:layout_marginTop="5dp"/>
                    </RelativeLayout>
                    <RelativeLayout
                            android:layout_below="@+id/openPopupIme"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:id="@+id/relLayout6"
                            android:layout_marginTop="15dp">

                        <EditText
                                android:focusable="false"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/editTxDatumRodenja"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="40dp"
                                android:background="@null"
                                android:paddingTop="25dp"
                                android:inputType="date"
                                android:hint="Datum rođenja"/>
                        <TextView
                                android:text="Datum rođenja"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:id="@+id/textView17"
                                android:layout_marginStart="40dp"
                                android:layout_marginTop="1dp"/>
                        <ImageView
                                android:layout_width="60dp"
                                android:layout_height="40dp" app:srcCompat="@mipmap/editicon_foreground"
                                app:layout_constraintTop_toTopOf="parent"
                                android:id="@+id/imageView17" android:layout_alignParentEnd="true"
                                android:layout_alignParentTop="true" android:layout_marginEnd="4dp"
                                android:layout_marginTop="5dp"/>

                    </RelativeLayout>
                    <RelativeLayout

                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_below="@+id/relLayout6"
                            android:id="@+id/onClickSpol"
                            android:layout_marginTop="15dp">

                        <TextView
                                android:clickable="true"
                                android:text="Spol"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:id="@+id/textView18"
                                android:layout_marginStart="40dp"
                                android:layout_marginTop="1dp"/>
                        <TextView
                                android:text="Odaberi spol"
                                android:layout_width="106dp"
                                android:layout_height="wrap_content" android:layout_alignParentStart="true"
                                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="50dp"
                                app:layout_constraintTop_toTopOf="parent" android:id="@+id/txSpol"
                                android:layout_alignParentBottom="true" android:layout_marginBottom="7dp"
                                android:scaleX="1.2" android:scaleY="1.2"/>
                        <ImageView
                                android:layout_width="60dp"
                                android:layout_height="40dp" app:srcCompat="@mipmap/editicon_foreground"
                                android:layout_alignParentBottom="true" app:layout_constraintEnd_toEndOf="parent"
                                android:layout_marginBottom="2dp" android:id="@+id/imageView19"
                                android:layout_alignParentEnd="true" android:layout_marginEnd="4dp"/>

                    </RelativeLayout>


                </RelativeLayout>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="25sp"
                        android:text="TRAŽIM"
                        android:layout_below="@id/openPopupIme"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="50dp"
                        android:textColor="@color/black"
                        android:id="@+id/textPrivateInfo" android:translationY="-20dp"/>
                <RelativeLayout
                        android:background="@drawable/shape"
                        android:layout_width="380dp"
                        android:layout_height="94dp"
                        android:layout_below="@+id/relLayout"
                        android:id="@+id/relLayout9"
                        android:layout_marginTop="15dp" android:translationY="-25dp">


                    <RadioGroup
                            android:layout_width="wrap_content"
                            android:layout_height="80dp"
                            android:id="@+id/RGroup" android:layout_alignParentStart="true"
                            android:layout_marginStart="15dp" android:layout_alignParentBottom="true"
                            android:layout_marginBottom="-1dp">

                        <RadioButton
                                android:layout_marginStart="40dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Muškarca"
                                android:id="@+id/rbMuskarca"/>
                        <RadioButton
                                android:layout_marginStart="40dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ženu"
                                android:id="@+id/rbZenu"/>
                    </RadioGroup>

                </RelativeLayout>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="25sp"
                        android:text="IZMEĐU GODINA"
                        android:layout_below="@id/openPopupIme"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="55dp"
                        android:textColor="@color/black"
                        android:id="@+id/textPrivateInfo1" android:translationY="-50dp"/>
                <RelativeLayout
                        android:background="@drawable/shape"
                        android:layout_width="380dp"
                        android:layout_height="60dp"
                        android:layout_below="@+id/relLayout"
                        android:id="@+id/relLayout10"
                        android:layout_marginTop="5dp" android:translationY="-40dp">
                    <EditText
                            android:layout_width="80dp"
                            android:layout_height="40dp"
                            android:inputType="numberSigned"
                            android:ems="10"
                            android:layout_alignParentStart="true" android:layout_marginStart="109dp"
                            android:layout_alignParentBottom="true" android:layout_marginBottom="8dp"
                            android:id="@+id/editTextNumberSigned"/>
                    <EditText
                            android:layout_width="80dp"
                            android:layout_height="40dp"
                            android:inputType="numberSigned"
                            android:ems="10"
                            android:layout_alignParentBottom="true" app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginBottom="8dp" android:id="@+id/editTextNumberSigned2"
                            android:layout_alignParentEnd="true" android:layout_marginEnd="109dp"/>
                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>